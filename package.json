{
  "name": "nwlv",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://montessoriskyeview.com",
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.12",
    "@mui/icons-material": "^5.15.13",
    "@mui/material": "^5.15.13",
    "@mui/styled-engine-sc": "^6.0.0-alpha.17",
    "@react-three/fiber": "^8.15.19",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.87",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/three": "^0.162.0",
    "framer-motion": "^11.0.8",
    "framer-motion-3d": "^11.0.8",
    "google-map-react": "^2.2.1",
    "popmotion": "^11.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "react-scripts": "5.0.1",
    "styled-components": "^6.1.8",
    "three": "^0.162.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "predeploy": "npm run build",
    "start": "craco start",
    "build": "craco build",
    "test": "react-scripts test --watchAll=false",
    "test:mobile": "react-scripts test --testPathPattern=mobile --watchAll=false",
    "test:mobile:watch": "react-scripts test --testPathPattern=mobile",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:lighthouse": "npx lighthouse --chrome-flags=\"--headless\" --output=html --output-path=./lighthouse-report.html http://localhost:3000",
    "test:perf": "npm run build && npm run test:lighthouse",
    "test:perf:dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && npm run test:lighthouse\"",
    "test:mobile:coverage": "react-scripts test --testPathPattern=mobile --coverage --watchAll=false",
    "test:analytics": "react-scripts test --testPathPattern=analytics --watchAll=false",
    "test:analytics:watch": "react-scripts test --testPathPattern=analytics",
    "validate:analytics": "node scripts/validate-analytics.js",
    "eject": "react-scripts eject",
    "migrate-box": "node scripts/migrate-box-imports.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@craco/craco": "^7.1.0",
    "concurrently": "^9.2.0",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "gh-pages": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mini-css-extract-plugin": "^2.7.6",
    "wait-on": "^8.0.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "node scripts/run-mobile-tests.js"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/reportWebVitals.ts",
      "!src/setupTests.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "^src/utils/cssOptimizer$": "<rootDir>/src/__mocks__/cssOptimizer.ts"
    }
  }
}
